
@{
    ViewData["Title"] = "EditProfile";
}

<form method="post" action="saveData">
    <div class="form-group">
        <label for="exampleInputPassword1">Name</label>
        <input type="text" class="form-control" id="exampleInputPassword1" placeholder="@Context.Session.GetString("UserName")" name="name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Context.Session.GetString("UserEmail")" name="email" readonly>
      
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Address</label>
        <input type="text" class="form-control" id="Address"  name="Address" >
        
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="Phone">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>